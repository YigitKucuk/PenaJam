<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/attachment_summary_on"
            android:padding="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:background=" @color/cardview_dark_background"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:src="@drawable/defaulthuman" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="John Fruiscante"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Username"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/username"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/edit_profile"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_whiite10_20"
        android:orientation="vertical"
        android:padding="15dp"
        />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Log out" />

    <RelativeLayout
        android:id="@+id/Menu_icons"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginTop="65dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_back_third_100"

        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_Assig"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:background="@color/transparan"
            android:src="@drawable/ic_baseline_attach_file_24" />


        <ImageButton
            android:id="@+id/btn_MainScreen"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@color/transparan"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_baseline_amp_stories_24" />

        <ImageButton
            android:id="@+id/btn_Settings"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@color/transparan"
            android:src="@drawable/ic_baseline_settings_24" />


    </RelativeLayout>

</RelativeLayout>





