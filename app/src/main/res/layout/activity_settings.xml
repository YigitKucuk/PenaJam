<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/transparan"
            android:contentDescription="@string/attachment_summary_on"
            android:padding="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:padding="5dp"
        android:src="@drawable/defaulthuman"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/transparan"

        app:strokeWidth="4dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="John Fruiscante"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Username"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        android:textColor="#CCFFFFFF"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@id/username"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edit_profile"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_whiite10_20"
        android:orientation="vertical"
        android:padding="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edit_profile"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="130dp"
            android:text="@string/action_notification"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_notifications_24" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_material"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginStart="300dp"
            android:checked="true"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chart2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/chart"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_whiite10_20"
        android:orientation="vertical"
        android:padding="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/chart"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="130dp"
            android:text="@string/action_nightmode"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_nights_stay_24" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_material2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginStart="300dp"
            android:checked="true"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chart3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/chart2"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_back_whiite10_20"
        android:orientation="vertical"
        android:padding="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/chart2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="130dp"
            android:text = "Sound"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_article_24" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_material3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginStart="300dp"
            android:checked="true"
            android:visibility="visible" />
    </RelativeLayout>


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chart3"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        android:text="Log out" />

    <RelativeLayout
        android:id="@+id/Menu_icons"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginTop="65dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/round_back_third_100"

        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_Assig"
            android:layout_width="60dp"
            android:layout_height="80dp"

            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparan"
            android:src="@drawable/baseline_lyrics_20" />


        <ImageButton
            android:id="@+id/btn_MainScreen"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@color/transparan"
            android:layout_toRightOf="@id/btn_Assig"
            android:src="@drawable/baseline_home_24" />

        <ImageButton
            android:id="@+id/btn_Settings"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:layout_toRightOf="@id/btn_Profile"
            android:background="@color/transparan"
            android:src="@drawable/baseline_settings_24" />

        <ImageButton
            android:id="@+id/btn_Profile"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"

            android:layout_toRightOf="@id/btn_MainScreen"
            android:background="@color/transparan"
            android:src="@drawable/baseline_account_circle_24" />

        <ImageButton
            android:id="@+id/btnList"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/btn_Settings"
            android:background="@color/transparan"
            android:src="@drawable/ic_baseline_person_search_24" />

    </RelativeLayout>

</RelativeLayout>





