<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"


    app:cardCornerRadius = "16dp"
    android:layout_margin = "12dp"
    app:cardBackgroundColor = "@color/cardview_dark_background"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_baseline_send_24" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:padding="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:padding="2dp"
            android:src="@drawable/defaultpp"
            app:shapeAppearanceOverlay="@style/Circular"
            app:strokeColor="@color/transparan"
            app:strokeWidth="4dp"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"

            android:text="New Message "
            android:textColor="#C8C8C8"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/profile_icon"

            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"

            android:text="Chat was Started by: "
            android:textColor="#C8C8C8"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@id/profile_icon"

            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/user_realname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="4dp"
            android:text="Realname"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="17dp"

            app:layout_constraintStart_toEndOf="@id/profile_icon"

            app:layout_constraintTop_toBottomOf="@id/started"
            tools:ignore="MissingConstraints" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>









